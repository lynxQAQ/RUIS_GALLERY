
/* 图片展示 */
.postPicShown{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  max-width: 600rpx;
  margin-top: 30rpx;
}

.postPicArea{
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 266rpx;
  height: 100%;
  max-height: 266rpx;
  padding:4rpx;
  border: 6rpx solid rgb(217,241,245,1);
  overflow: hidden; 
}

.userPostPic{
  height: 100%;
  width: 266rpx;
  overflow: hidden;
}


